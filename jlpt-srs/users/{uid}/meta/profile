// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid);

      match /meta/{docId} {
        allow read, write: if isOwner(uid);
      }

      match /progress/{docId} {
        allow read, write: if isOwner(uid);
      }
    }
  }
}
