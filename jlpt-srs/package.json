    "@stripe/stripe-js": "^5.10.0",
    "@tanstack/react-query": "^5.90.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "firebase": "^12.3.0",
    "framer-motion": "^12.23.18",
    "localforage": "^1.10.0",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "styled-components": "^6.1.19",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
