  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "analyze:unused": "node scripts/unused-exports.cjs",
    "analyze:unused:move": "node scripts/unused-exports.cjs --move",
    "build": "tsc -b && vite build",
